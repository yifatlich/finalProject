<header>
	<title>manager resuls</title>
</header>
<body>
	<div class="container my-5">
		<h1 class="text-center mb-4">Search Results</h1>

		<% if (managers && managers.length > 0) { %>
		<div class="table-responsive">
			<table class="table table-striped table-bordered align-middle">
				<thead>
					<tr>
						<th scope="col">#</th>
						<th scope="col">Username</th>
						<th scope="col">Password</th>
						<th scope="col">Created At</th>
						<th scope="col">Actions</th>
					</tr>
				</thead>
				<tbody>
					<% managers.forEach((manager, index) => { %>
					<tr>
						<td>
							<%= index + 1 %>
						</td>
						<td>
							<%= manager.username %>
						</td>
						<td>
							<%= manager.password %>
						</td>
						<td>
							<%= new Date(manager.createdAt).toLocaleDateString() %>
						</td>
						<td>
							<div class="d-flex gap-2">
								<form action="/managers/updateForm/<%= manager._id %>" method="GET" style="display:inline;">
									<button type="submit" class="btn btn-warning btn-sm">Update</button>
								</form>
								<form action="/managers/"
									<%= manager.username %>?_method=DELETE" method="POST" style="display:inline;">
									<button type="submit" class="btn btn-danger btn-sm" onclick="return confirm('Are you sure you want to delete this manager?');">Delete</button>
								</form>
							</div>
						</td>
					</tr>
					<% }) %>
				</tbody>
			</table>
		</div>
		<% } else { %>
            <p class="text-center text-muted">No managers found.</p>
		<% } %>
        
        <div class="text-center mt-4">
			<button class="btn btn-primary" onclick="window.location.href='/managers/search'">New Search</button>
		</div>
	</div>
	<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
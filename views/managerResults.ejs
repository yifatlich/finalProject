<body>
    <h1 class="display-4 text-center">Search Results</h1>

    <% if (managers && managers.length > 0) { %>
        <div class="table-responsive">
            <table class="table table-striped">
                <thead>
                    <tr>
                        
                        <th scope="col">Username</th>
                        <th scope="col">Password</th>
                        <th scope="col">Created At</th>
                        <th scope="col">Actions</th>
                    </tr>
                </thead>
                <tbody>
                    <% managers.forEach((manager, index) => { %>
                        <tr>
                            <td><%= index + 1 %></td>
                            <td><%= manager.username %></td>
                            <td><%= manager.password %></td>
                            <td><%= new Date(manager.createdAt).toLocaleDateString() %></td>
                            <td>
                                <form action="/managers/updateForm/<%= manager._id %>" method="GET" style="display:inline;">
                                    <button type="submit" class="btn btn-warning">Update</button>
                                </form>
                                <form action="/managers/<%= manager.username %>?_method=DELETE" method="POST" style="display:inline;">
                                    <button type="submit" class="btn btn-danger" onclick="return confirm('Are you sure you want to delete this manager?');">Delete</button>
                                </form>
                            </td>
                        </tr>
                    <% }) %>
                </tbody>
            </table>
        </div>
    <% } else { %>
        <p>No managers found.</p> 
    <% } %>
    <br>
    <button class="btn btn-primary mx-3" onclick="window.location.href='/managers/search'">New Search</button>
</body>
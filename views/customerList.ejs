<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Customer List</title>
    <link rel="stylesheet" href="/path/to/your/styles.css"> <!-- Optional: Link your CSS -->
</head>
<body>
    <h1>Customer List</h1>
    <table>
        <thead>
            <tr>
                <th>Username</th>
                <th>Email</th>
                <th>Phone</th>
                <th>Street</th>
                <th>City</th>
                <th>State</th>
                <th>ZipCode</th>
                <th>CreatedAt</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            <% customers.forEach(customer => { %>
                <tr>
                    <td><%= customer.username %></td>
                    <td><%= customer.email %></td>
                    <td><%= customer.phone || 'N/A' %></td>
                    <td><%= customer.address.street %></td>
                    <td><%= customer.address.city %></td>     
                    <td><%= customer.address.state %></td>     
                    <td><%= customer.address.zipCode %></td>    
                    <td><%= customer.createdAt.toDateString() %></td>
                    <td>
                        <form action="/customers/updateForm/<%= customer._id %>" method="GET" style="display:inline;">
                            <button type="submit">Update</button>
                        </form>
                        <form action="/customers/<%= customer._id %>?_method=DELETE" method="POST" style="display:inline;">
                            <button type="submit" onclick="return confirm('Are you sure you want to delete this customer?');">Delete</button>
                        </form>
                    </td>
                </tr>
            <% }) %>
        </tbody>
    </table>
    <button onclick="window.location.href='/customers/register'">Add New Customer</button>
    <button onclick="window.location.href='/customers/search'">Search Customer</button>
</body>
</html>

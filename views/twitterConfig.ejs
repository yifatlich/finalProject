<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Manage Usernames</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>
    <div class="container mt-5">
        <h1 class="text-center">Manage Twitter Usernames</h1>
        <form action="/twitter/config/add" method="POST" class="mt-4">
            <div class="mb-3">
                <label for="username" class="form-label">Enter Username</label>
                <input type="text" class="form-control" id="username" name="username" required>
            </div>
            <button type="submit" class="btn btn-primary">Add Username</button>
        </form>
        <h2 class="mt-4">List of Usernames</h2>
        <ul class="list-group">
            <% usernames.forEach(function(username) { %>
                <li class="list-group-item d-flex justify-content-between">
                    <span><%= username.username %></span>
                    <form action="/twitter/config/remove" method="POST" class="d-inline">
                        <input type="hidden" name="username" value="<%= username.username %>">
                        <button type="submit" class="btn btn-danger btn-sm">Remove</button>
                    </form>
                </li>
            <% }) %>
        </ul>
    </div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>

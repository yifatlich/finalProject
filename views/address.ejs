<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>Stores on Map</title>
    <style>
        #map {
            height: 500px;
            width: 100%;
        }
    </style>
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
</head>
<body>
    <h1>Store Locations on Map</h1>
    <div id="map"></div>
    <script>
        let map, geocoder;

        function initMap() {
            map = new google.maps.Map(document.getElementById("map"), {
                center: { lat: 40.730610, lng: -73.935242 }, // Set an initial center
                zoom: 10,
            });
            geocoder = new google.maps.Geocoder();

            // Fetch store data
            $.get('/api/stores', function(stores) {
                console.log("Fetched stores: ", stores); // Log stores data
                stores.forEach(store => {
                    geocodeAddress(store);
                });
            }).fail(function(jqXHR, textStatus, errorThrown) {
                console.error("Error fetching stores: ", textStatus, errorThrown);
            });
        }

        function geocodeAddress(store) {
            geocoder.geocode({ 'address': store.address }, function(results, status) {
                if (status === 'OK') {
                    new google.maps.Marker({
                        map: map,
                        position: results[0].geometry.location,
                        title: store.name || "Store"
                    });
                } else {
                    console.error("Geocode failed: " + status);
                }
            });
        }
    </script>
    <script async
            src="https://maps.googleapis.com/maps/api/js?key=AIzaSyAEv5TdHL-UlQy6M-wSvy62rBKk4TtJaCU&callback=initMap">
    </script>
</body>
</html>
